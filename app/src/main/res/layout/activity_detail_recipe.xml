<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailRecipe">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="50sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/chunk"

                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="-1dp"></include>

            <ImageView
                android:id="@+id/DetailImage"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_margin="0sp"
                android:scaleType="centerCrop"
                android:text="Recipe Image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher_round"></ImageView>


            <TextView
                android:id="@+id/HealthRank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:text="By: "
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="italic"
                app:fontFamily="@font/hind_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/DetailImage"></TextView>

            <TextView
                android:id="@+id/PreparationM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:text="Preparation Minutes"
                android:textAlignment="center"
                android:textSize="15sp"
                app:fontFamily="@font/hind_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/HealthRank"></TextView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cooking Minutes" />

            <TextView
                android:id="@+id/glutenFree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:text="GlutenFree"
                android:textSize="15sp"
                app:fontFamily="@font/hind_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/PreparationM"></TextView>

            <TextView
                android:id="@+id/dairyFree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:autoLink="web"
                android:text="DairyFree"
                android:textSize="15sp"
                app:fontFamily="@font/hind_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/glutenFree"></TextView>

        <TextView
            android:id="@+id/DetailNutritionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:text="Nutritional Data"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/hind_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dairyFree"></TextView>

        <TextView
            android:id="@+id/DetailNutrition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:text="Nutrition"
            android:textSize="15sp"
            app:fontFamily="@font/hind_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/DetailNutritionTitle"></TextView>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <Button
                android:id="@+id/button"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="Start"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>